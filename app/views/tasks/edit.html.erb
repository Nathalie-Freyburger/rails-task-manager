<h1>Edit task</h1>

<%= form_for(@task) do |f| %>

<strong><%= f.label :title %></strong>
<%= f.text_field :title, class: 'form-control' %>

<strong><%= f.label :details %></strong>
<%= f.text_field :details, class: 'form-control' %>

<%= f.check_box :completed, class: 'form-check-input' %>
<%= f.label :completed, "Done", class: 'form-check-label' %></span>

<%= f.submit class: 'btn btn-primary' %>

<% end %>

<i class="fas fa-redo"></i><span><%= link_to "Back to list", tasks_path %></span>

