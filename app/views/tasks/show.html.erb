<h1><%= @task.title %></h1>
<%= link_to "Edit this task", edit_task_path %>
<%= @task.details %>

<% if @task.completed? %>
  <i class="far fa-check-square"></i><p>This task is complete</p>
<% else %>
  <i class="far fa-square"></i><p>This task has not been completed yet</p>
<% end %>

<%= link_to "Back to list", tasks_path %>